---
import Layout from "../../layouts/Layout.astro";
import SupportBanner from "../../sections/support_banner/SupportBanner.astro";
import BlogBlogpage from "../../sections/blog_blogpage/BlogBlogpage.astro";
export const prerender = true;
export async function getStaticPaths() {
  const blogs = await Astro.glob(`../../contents/blogs/**/*.md`);
  console.log(blogs);
  return blogs.map((blog) => ({
    params: {
      slug: blog.frontmatter.slug,
    },
    props: {
      blog: blog,
    },
  }));
}

const { Content, frontmatter } = Astro.props.blog;
---

<Layout title="Blog | Hooman Digital">
  <div class="bg-[#fffcf9] pt-[100px]">
    <div class="container mx-auto mt-16 px-4 md:px-12 pb-4">
      <p class="pb-20 flex items-center gap-2">
        Hooman Digital <span class="block h-2 w-2 bg-black"></span> Blog
      </p>
      <h3 class="py-2 font-semibold text-5xl">{frontmatter.title}</h3>
      <p class="text-base py-4">{frontmatter.description}</p>
      <img
        src={`${frontmatter.image}`}
        alt={`${frontmatter.title} image`}
        class="w-full py-4"
      />
      <p class="flex justify-between items-end my-0 py-4">
        <span class="uppercase text-lg font-bold">{frontmatter.type}</span>
        <span>{frontmatter.date}</span>
      </p>
    </div>
    <div class="container mx-auto px-4 md:px-12 pb-20">
      <Content />
    </div>
    <BlogBlogpage slug={frontmatter.slug} />

    <SupportBanner />
  </div>
</Layout>
