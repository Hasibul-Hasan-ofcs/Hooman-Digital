---
import { Image } from "astro:assets";
import hommanMainText from "../../assets/png/hooman-logo-main-text.png";
import hommanMainRect from "../../assets/png/hooman-logo-main-rectangle.png";
---

<div class="fixed top-0 left-0 bg-[#fffcf9] z-30 w-full">
  <div
    class="container mx-auto px-4 md:px-12 min-h-[80px] flex items-center justify-between"
  >
    <a href="/" class="flex gap-2">
      <Image
        src={hommanMainRect}
        alt="hooman main logo rect"
        class="h-[35px] w-fit"
      />
      <Image
        src={hommanMainText}
        alt="hooman main logo text"
        class="h-[35px] w-fit"
      />
    </a>
    <div class="flex gap-4 md:gap-8">
      <a href="/" class="font-bold"> Home</a>
      <a href="/blog" class="font-bold"> Blog</a>
    </div>
  </div>
</div>
